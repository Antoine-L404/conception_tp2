<Window x:Class="Automate.Views.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CalendarWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Calendar x:Name="myCalendar" Margin="20" SelectionMode="SingleDate"
                      IsTodayHighlighted="True"
                      Loaded="CalendarLoaded" 
                      PreviewMouseLeftButtonDown="OnCalendarDateClicked">
            </Calendar>

            <StackPanel Margin="20">
                <TextBlock Text="Détails de l'événement" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
                <TextBlock x:Name="eventTitle" FontWeight="Bold" FontSize="14" Margin="0,0,0,5" />
                <TextBlock x:Name="eventDate" FontSize="12" Foreground="Gray" />
                <StackPanel Margin="20">
                    <Button Content="Ajouter un événement" Command="{Binding OnAddEventClick}" CommandParameter="{Binding SelectedDate}" Margin="0,10,0,0"/>
                    <Button Content="Modifier l'événement" Click="OnEditEventClick" Margin="0,10,0,0"/>
                    <Button Content="Supprimer l'événement" Click="OnDeleteEventClick" Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
