<Window x:Class="Automate.Views.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CalendarWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Calendar x:Name="myCalendar" Margin="20" SelectionMode="SingleDate"
                      IsTodayHighlighted="True"
                      Loaded="CalendarLoaded" 
                PreviewMouseLeftButtonDown="OnCalendarDateClicked">
            </Calendar>

            <Popup Name="myPopup" Placement="Left" StaysOpen="True">
                <Border BorderThickness="1" Background="White">
                    <StackPanel>
                        <TextBlock Name="myPopupTitle" FontWeight="Bold" FontSize="14" Margin="10" />
                        <TextBlock Name="myPopupText" Background="LightBlue" Foreground="Blue" Padding="30" />
                    </StackPanel>
                </Border>
            </Popup>
        </StackPanel>
    </Grid>
</Window>
